extends layout 

block content 

    form(method='POST' action='')
        div.form-group
            label(for='title') Title: 
            input(type='text', placeholder='Name of game' name='title' required='true')
        div.form-group
            label(for='summary') Summary: 
            textarea(type='textarea', placeholder='Summary' name='summary' required='true')
        div.form-group
            label(for='price') Price: 
            input(type='number', placeholder='Price' name='price' required='true')
        div.form-group
            label(for='stock') Stock: 
            input(type='number', placeholder='Stock' name='stock' required='true')
        div.form-group
            label Genre: 
            div 
                for genre in genres 
                    div(style='display: inline; padding-right:10px;')
                        input.checkbox-input(type='checkbox', name='genre', id=genre._id, value=genre._id, checked=genre.checked )
                        label(for=genre._id) #{genre.name}
        div.form-group
            label Platform: 
            div 
                for platform in platforms 
                    div(style='display: inline; padding-right:10px;')
                        input.checkbox-input(type='checkbox', name='platform', id=platform._id, value=platform._id, checked=platform.checked )
                        label(for=platform._id) #{platform.name}
        button(type='submit') Submit
    if errors
        ul
            for error in errors
                li!= error.msg